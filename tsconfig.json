{
    "compilerOptions": {
      // Targeted standard
      "target": "es2022",
      "lib": ["es2023"],
      // Module system
      "module": "node16",
      "moduleResolution": "node16",
      "esModuleInterop": true,
      // Strictness
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "skipLibCheck": true,
      // Output
      "sourceMap": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "declaration": true,
    },
    "include": ["**/*.ts"]
  }